h1{
    background-color: cadetblue;
}
/* flex box */

/* ------------------------------------- */
/* Pseudo Elements (::)*/
/* before */
/* after */
/* first-line */
pre::first-letter{
    /* content: " * "; */
    background-color: firebrick;
    color: white;
    font-size: 100px;
}
/* ::placeholder{
    background-color: aqua;
    color: darkcyan;
} */
::selection{
    background-color: darkkhaki;
    color: aliceblue;
    font-size: 200px;
}
::marker{
    color: blueviolet;
}
/* ---------------------------------------------------------- */
/* Pseudo Class (:)*/
/* Basic Pseudo Class */
/* hover */
/* focus - input*/
/* active - a/button*/
button:hover{
    background-color: cornflowerblue;
    color: white;
}
input:focus{
    background-color: burlywood;
}
button:active{
    background-color: red;
}
/* visited / unvisited */

/* ----------------------------- */
/* 2) Structural Pseudo Class */

/* first-child */
/* last -child */
/* nth-child - (any number)*/
/* n - all */
/* even - 2n */
/* odd - 2n + 1 */
/* p:nth-child(2n+1){
    background-color: blueviolet;
} */

/* p:nth-last-child(2n+1){
    background-color: blueviolet;
} */
 p:only-child{
    background-color: blueviolet;
}

p:not(.para){
    background-color: brown;
}
input:enabled{
    background-color: chartreuse;
}
input:disabled{
    background-color: red;
}
input:read-only{
    background-color: khaki;
}
input:valid{
    color: green;
    border: 10px solid green;
}
input:invalid{
    color: red;
    border: 10px solid red;
}